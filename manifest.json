{
	"name": "Klaffer",
	"description": "Google Chrome extension for manage tabs",
	"version": "1.2",
	"manifest_version": 3,
	"icons": { 
		"16": "src/static/icons/icon16.png",
		"48": "src/static/icons/icon48.png",
		"128": "src/static/icons/icon128.png" 
	},
	"background": {
		"service_worker": "src/static/js/background.js"
  	},
	"action": {
		"default_icon": {                    
			"19": "src/static/icons/icon48.png",          
			"38": "src/static/icons/icon48.png"          
		}
	},
	"web_accessible_resources": [{
		"resources": ["src/static/icons/icon128.png"],
		"matches": ["<all_urls>"]
	}],
	"permissions": [
        "tabs",
        "contextMenus"
	]
}